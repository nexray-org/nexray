{
  "name": "basis",
  "version": "1.0.0",
  "description": "\"# Basis\"",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "pnpm --filter \"*\" clean && shx rm -rf pnpm-lock.yaml node_modules",
    "prettier-format": "prettier --config prettier.config.js 'packages/*/src/**/*{.ts,.tsx,.js,.jsx}' --write",
    "find-circular-deps": "pnpx madge --circular --extensions ts,tsx packages/",
    "start": "pnpm turbo build --filter @basis/start && IS_DEV=1 node packages/start/bin/index.js"
  },
  "author": "dilan-dio4",
  "devDependencies": {
    "@next/eslint-plugin-next": "^13.0.7",
    "@types/expect": "^24.3.0",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "expect": "^29.3.1",
    "jest": "^29.3.1",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "shx": "^0.3.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "turbo": "^1.6.3",
    "typescript": "^4.7.4"
  }
}
