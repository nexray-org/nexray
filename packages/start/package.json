{
  "name": "nexray",
  "version": "0.1.0-alpha.1",
  "main": "build/index.js",
  "scripts": {
    "test": "ts-mocha --paths test/**/*.spec.ts --timeout 50000",
    "prebuild": "shx rm -f tsconfig.package.tsbuildinfo",
    "build": "tsc -p ./tsconfig.json && shx rm -rf ./bin/app && shx cp -R ./src/app ./bin",
    "clean": "shx rm -rf build pnpm-lock.yaml node_modules tsconfig.package.tsbuildinfo",
    "env:start": "IS_DEV=1 node bin/index.js"
  },
  "devDependencies": {
    "@types/node": "^18.7.11",
    "typescript": "^4.7.4"
  },
  "bin": {
    "nexray": "bin/index.js"
  },
  "dependencies": {
    "@esm2cjs/execa": "6.1.1-cjs.1",
    "@nexray/app": "workspace:*",
    "@nexray/json-finder": "workspace:*",
    "@nexray/server": "workspace:*",
    "open": "^8.4.0",
    "sqlite3": "^5.1.4"
  }
}
