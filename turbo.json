{
    "$schema": "https://turbo.build/schema.json",
    "pipeline": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**"
            ]
        },
        "test": {
            "dependsOn": [
                "build"
            ],
            "outputs": [],
            "cache": false
        },
        "test:watch": {
            "cache": false
        },
        "start:env": {
            "dependsOn": ["build"]
        },
        "clean": {
            "cache": false
        }
    }
}